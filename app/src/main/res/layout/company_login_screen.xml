<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_logoo"
        android:src="@drawable/logo"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:id="@+id/login_bar_llll">

        <com.yellowsoft.onitsway.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/login_mainn"
            android:textColor="@color/login_signup_text"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_back"
        android:gravity="center" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="50dp"
            android:divider="@drawable/signup_divider"
            android:showDividers="middle" >

            <com.yellowsoft.onitsway.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/com_email_login"
                android:background="@drawable/field_background"
                android:gravity="center"
                android:textColor="@color/grey_textcolor"
                android:textSize="15sp"
                android:hint="Email ID *"
                android:inputType="textEmailAddress" />

            <com.yellowsoft.onitsway.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/field_background"
                android:id="@+id/com_pass_login"
                android:hint="Password *"
                android:textColor="@color/grey_textcolor"
                android:textSize="15sp"
                android:gravity="center" />
        </LinearLayout>

        <com.yellowsoft.onitsway.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:id="@+id/forgot_passs"
            android:textColor="@color/black_text"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="15sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:id="@+id/com_login_ll">

            <com.yellowsoft.onitsway.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:id="@+id/com_login_tv"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="10dp"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>