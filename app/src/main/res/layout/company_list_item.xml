<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/field_background_big"
        android:padding="10dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#ffffff">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/company_logo_list"
                android:src="@drawable/company_logo"
                android:adjustViewBounds="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical">

            <com.yellowsoft.onitsway.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TNT SHIPPING"
                android:id="@+id/list_com_name"
                android:textSize="15sp" />

            <com.yellowsoft.onitsway.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:id="@+id/list_com_status"
                android:textColor="#99508f"
                android:textSize="15sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:id="@+id/list_rating_ll"
                    android:divider="@drawable/rating_divider"
                    android:showDividers="middle" />
            </LinearLayout>

            <com.yellowsoft.onitsway.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.450 KD"
                android:id="@+id/list_cost"
                android:textSize="15sp"
                android:textColor="#99508f"
                android:singleLine="true" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>