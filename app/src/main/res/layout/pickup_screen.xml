<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_back"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_weight="1"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center"
                android:divider="@drawable/signup_divider"
                android:showDividers="middle">

                <com.yellowsoft.onitsway.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickup_fname"
                    android:background="@drawable/field_background"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="15sp"
                    android:hint="Full Name *"
                    android:singleLine="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickup_area"
                    android:background="@drawable/field_background"
                    android:gravity="center">

                    <com.yellowsoft.onitsway.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickup_area_tv"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/black_text"
                        android:hint="Pick Up Area *"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/downarrow"
                        android:src="@drawable/down_arrow"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.yellowsoft.onitsway.MyEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickup_block"
                        android:background="@drawable/field_half_background"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/grey_textcolor"
                        android:hint="Block *"
                        android:singleLine="true"
                        android:padding="5dp"
                        android:textColorHint="@color/grey_textcolor" />

                    <com.yellowsoft.onitsway.MyEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickup_building"
                        android:background="@drawable/field_half_background"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="center"
                        android:textColor="@color/grey_textcolor"
                        android:hint="Building *"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:padding="5dp"
                        android:textColorHint="@color/grey_textcolor" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.yellowsoft.onitsway.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickup_streetname"
                        android:background="@drawable/field_background"
                        android:gravity="center"
                        android:textColor="@color/grey_textcolor"
                        android:textSize="15sp"
                        android:hint="Street Name *"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:padding="5dp"
                        android:textColorHint="@color/grey_textcolor" />

                    <com.yellowsoft.onitsway.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickup_house"
                        android:background="@drawable/field_background"
                        android:gravity="center"
                        android:textColor="@color/grey_textcolor"
                        android:textSize="15sp"
                        android:hint="House / Flat / Apartment *"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:padding="5dp"
                        android:textColorHint="@color/grey_textcolor" />
                </LinearLayout>

            </LinearLayout>

            <com.yellowsoft.onitsway.MyTextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="New Text"
                android:id="@+id/textView"
                android:background="#b1b1b1" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center"
                android:divider="@drawable/signup_divider"
                android:showDividers="middle">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.yellowsoft.onitsway.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickup_date"
                        android:background="@drawable/field_half_background"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="center"
                        android:textColor="@color/black_text"
                        android:hint="Date *"
                        android:singleLine="true"
                        android:textSize="15sp" />

                    <com.yellowsoft.onitsway.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickup_time"
                        android:background="@drawable/field_half_background"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black_text"
                        android:hint="Time *"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_type"
                        android:background="@drawable/field_background"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp">

                        <com.yellowsoft.onitsway.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_tv"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:textColor="@color/black_text"
                            android:hint="Item Type*"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView18"
                            android:src="@drawable/down_arrow"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.yellowsoft.onitsway.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickup_weight"
                        android:background="@drawable/field_background"
                        android:gravity="center"
                        android:textColor="@color/grey_textcolor"
                        android:textSize="15sp"
                        android:hint="Weight / Quantity *"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColorHint="@color/grey_textcolor" />
                </LinearLayout>

                <com.yellowsoft.onitsway.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:id="@+id/pick_mobile"
                    android:background="@drawable/field_background"
                    android:gravity="center"
                    android:hint="Mobile Number *"
                    android:textColor="@color/grey_textcolor"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:maxLength="8"
                    android:textColorHint="@color/grey_textcolor" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.yellowsoft.onitsway.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comments"
                        android:id="@+id/title_comments"
                        android:autoText="false"
                        android:background="@drawable/field_background_small"
                        android:gravity="center"
                        android:textColor="@color/grey_textcolor"
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/field_background"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp">

                        <com.yellowsoft.onitsway.MyEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/pick_comments"
                            android:background="#00000000"
                            android:textColor="@color/grey_textcolor"
                            android:textSize="15sp"
                            android:minLines="5"
                            android:textColorHint="@color/grey_textcolor"
                            android:gravity="top" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:id="@+id/pickup_submit"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center">

        <com.yellowsoft.onitsway.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/picku_submit"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:text="GO TO DELIVERY DETAILS" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/farrow"
            android:src="@drawable/forw_arrow" />
    </LinearLayout>

</LinearLayout>