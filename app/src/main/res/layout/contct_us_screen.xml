<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView9"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/imageView17"
                android:src="@drawable/logo_big"
                android:adjustViewBounds="false" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/contact_us_divider"
                android:showDividers="beginning|middle"
                android:padding="15dp">

                <com.yellowsoft.onitsway.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:id="@+id/et_contctus_name"
                    android:textColor="@color/grey_textcolor"
                    android:textSize="15sp"
                    android:hint="Name"
                    android:background="@drawable/field_background"
                    android:padding="10dp"
                    android:paddingRight="10dp" />

                <com.yellowsoft.onitsway.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:id="@+id/et_contactus_email"
                    android:background="@drawable/field_background"
                    android:hint="Email Id"
                    android:textSize="15sp"
                    android:textColor="@color/grey_textcolor"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <com.yellowsoft.onitsway.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:id="@+id/et_contactus_mobile"
                    android:background="@drawable/field_background"
                    android:hint="Mobile number"
                    android:textSize="15sp"
                    android:textColor="@color/grey_textcolor"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.yellowsoft.onitsway.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Message"
                        android:id="@+id/contact_comments"
                        android:autoText="false"
                        android:background="@drawable/field_background_small"
                        android:textColor="@color/grey_textcolor"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:padding="10dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:padding="5dp"
                        android:background="@drawable/white_background">

                        <com.yellowsoft.onitsway.MyEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/et_contact_msg"
                            android:hint="Message"
                            android:textSize="15sp"
                            android:textColor="@color/grey_textcolor"
                            android:background="#00000000"
                            android:gravity="top" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <com.yellowsoft.onitsway.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address_contact"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/black_text"
                android:gravity="center|center_horizontal" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:id="@+id/contact_us_ll">

        <com.yellowsoft.onitsway.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:id="@+id/contact_us"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>