<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView17"
        android:src="@drawable/logo_big" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/contact_us_divider"
        android:showDividers="beginning|middle"
        android:padding="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/et_contctus_name"
            android:textColor="@color/grey_textcolor"
            android:textSize="12dp"
            android:hint="Name"
            android:background="@drawable/field_background"
            android:padding="10dp"
            android:paddingRight="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/et_contactus_email"
            android:background="@drawable/field_background"
            android:hint="Email Id"
            android:textSize="12dp"
            android:textColor="@color/grey_textcolor"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/et_contactus_mobile"
            android:background="@drawable/field_background"
            android:hint="Mobile number"
            android:textSize="12dp"
            android:textColor="@color/grey_textcolor"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_contact_msg"
            android:background="@drawable/field_background"
            android:hint="Message"
            android:textSize="12dp"
            android:textColor="@color/grey_textcolor"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address_contact"
        android:layout_weight="1"
        android:padding="10dp"
        android:textColor="@color/black_text"
        android:gravity="center|center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:id="@+id/contact_us"
        android:background="@color/pink"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>