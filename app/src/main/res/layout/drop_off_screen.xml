<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_back"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView8"
        android:layout_weight="1"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:divider="@drawable/signup_divider"
            android:showDividers="middle">

            <com.yellowsoft.onitsway.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/drop_fname"
                android:background="@drawable/field_background"
                android:gravity="center"
                android:textColor="@color/grey_textcolor"
                android:textSize="15sp"
                android:hint="Full Name *"
                android:singleLine="true"
                android:padding="2dp"
                android:textColorHint="@color/grey_textcolor" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/drop_area"
                android:background="@drawable/field_background"
                android:gravity="center"
                android:padding="2dp">

                <com.yellowsoft.onitsway.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/drop_area_tv"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/black_text"
                    android:hint="Drop Off Area *"
                    android:singleLine="true"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/drop_darrow"
                    android:src="@drawable/down_arrow"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.yellowsoft.onitsway.MyEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dropoff_block"
                    android:background="@drawable/field_half_background"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/grey_textcolor"
                    android:hint="Block *"
                    android:singleLine="true"
                    android:padding="2dp"
                    android:textColorHint="@color/grey_textcolor" />

                <com.yellowsoft.onitsway.MyEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dropoff_building"
                    android:background="@drawable/field_half_background"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textColor="@color/grey_textcolor"
                    android:hint="Building *"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:padding="2dp"
                    android:textColorHint="@color/grey_textcolor" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.yellowsoft.onitsway.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dropoff_street"
                    android:background="@drawable/field_background"
                    android:gravity="center"
                    android:textColor="@color/grey_textcolor"
                    android:textSize="15sp"
                    android:hint="Street Name *"
                    android:singleLine="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textColorHint="@color/grey_textcolor" />

                <com.yellowsoft.onitsway.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dropoff_house"
                    android:background="@drawable/field_background"
                    android:gravity="center"
                    android:textColor="@color/grey_textcolor"
                    android:textSize="15sp"
                    android:hint="House / Flat / Apartment *"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:padding="2dp"
                    android:textColorHint="@color/grey_textcolor" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.yellowsoft.onitsway.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/drop_date"
                    android:background="@drawable/field_half_background"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:hint="Date *"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:padding="2dp" />

                <com.yellowsoft.onitsway.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/drop_time"
                    android:background="@drawable/field_half_background"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/black_text"
                    android:hint="Time *"
                    android:singleLine="true"
                    android:padding="2dp" />

            </LinearLayout>

            <com.yellowsoft.onitsway.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:id="@+id/dropoff_mobile"
                android:background="@drawable/field_background"
                android:gravity="center"
                android:hint="Mobile Number *"
                android:textColor="@color/grey_textcolor"
                android:textSize="15sp"
                android:singleLine="true"
                android:maxLength="8"
                android:padding="2dp"
                android:textColorHint="@color/grey_textcolor" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.yellowsoft.onitsway.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:id="@+id/title_drop_comments"
                    android:autoText="false"
                    android:background="@drawable/field_background_small"
                    android:gravity="center"
                    android:textColor="@color/grey_textcolor"
                    android:textSize="15dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/field_background"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp">

                    <com.yellowsoft.onitsway.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/drop_comments"
                        android:background="#00000000"
                        android:textColor="@color/grey_textcolor"
                        android:textSize="15sp"
                        android:minLines="5"
                        android:textColorHint="@color/grey_textcolor"
                        android:gravity="top" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.yellowsoft.onitsway.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/done"
        android:background="@color/pink"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="center" />

</LinearLayout>