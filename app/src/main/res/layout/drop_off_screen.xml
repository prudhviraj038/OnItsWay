<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_back"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:id="@+id/d_ll">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/d_addr_list_ll"
                    android:background="@drawable/pink_rounded_corners"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <com.yellowsoft.onitsway.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Addresses"
                        android:id="@+id/d_addr_list_tv"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView8"
                android:layout_weight="1"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:divider="@drawable/signup_divider"
                    android:showDividers="middle">

                    <com.yellowsoft.onitsway.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/drop_fname"
                        android:background="@drawable/field_background"
                        android:gravity="center"
                        android:textColor="@color/grey_textcolor"
                        android:textSize="15sp"
                        android:hint="Full Name *"
                        android:singleLine="true"
                        android:padding="2dp"
                        android:textColorHint="@color/grey_textcolor" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/drop_area"
                        android:background="@drawable/field_background"
                        android:gravity="center"
                        android:padding="2dp">

                        <com.yellowsoft.onitsway.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/drop_area_tv"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:textColor="@color/black_text"
                            android:hint="Drop Off Area *"
                            android:singleLine="true"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/drop_darrow"
                            android:src="@drawable/down_arrow"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <com.yellowsoft.onitsway.MyEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dropoff_block"
                            android:background="@drawable/field_half_background"
                            android:layout_weight="1"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/grey_textcolor"
                            android:hint="Block *"
                            android:singleLine="true"
                            android:padding="2dp"
                            android:textColorHint="@color/grey_textcolor" />

                        <com.yellowsoft.onitsway.MyEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dropoff_building"
                            android:background="@drawable/field_half_background"
                            android:layout_weight="1"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:gravity="center"
                            android:textColor="@color/grey_textcolor"
                            android:hint="Building *"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:padding="2dp"
                            android:textColorHint="@color/grey_textcolor" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.yellowsoft.onitsway.MyEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dropoff_street"
                            android:background="@drawable/field_background"
                            android:gravity="center"
                            android:textColor="@color/grey_textcolor"
                            android:textSize="15sp"
                            android:hint="Street Name *"
                            android:singleLine="true"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:padding="2dp"
                            android:textColorHint="@color/grey_textcolor" />

                        <com.yellowsoft.onitsway.MyEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dropoff_house"
                            android:background="@drawable/field_background"
                            android:gravity="center"
                            android:textColor="@color/grey_textcolor"
                            android:textSize="15sp"
                            android:hint="House / Flat / Apartment *"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:padding="2dp"
                            android:textColorHint="@color/grey_textcolor" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <com.yellowsoft.onitsway.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/drop_date"
                            android:background="@drawable/field_half_background"
                            android:layout_weight="1"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:gravity="center"
                            android:textColor="@color/black_text"
                            android:hint="Date *"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:padding="2dp" />

                        <com.yellowsoft.onitsway.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/drop_time"
                            android:background="@drawable/field_half_background"
                            android:layout_weight="1"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/black_text"
                            android:hint="Time *"
                            android:singleLine="true"
                            android:padding="2dp" />

                    </LinearLayout>

                    <com.yellowsoft.onitsway.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:id="@+id/dropoff_mobile"
                        android:background="@drawable/field_background"
                        android:gravity="center"
                        android:hint="Mobile Number *"
                        android:textColor="@color/grey_textcolor"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:maxLength="8"
                        android:padding="2dp"
                        android:textColorHint="@color/grey_textcolor" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <com.yellowsoft.onitsway.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comments"
                            android:id="@+id/title_drop_comments"
                            android:autoText="false"
                            android:background="@drawable/field_background_small"
                            android:gravity="center"
                            android:textColor="@color/grey_textcolor"
                            android:textSize="15dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/field_background"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="15dp">

                            <com.yellowsoft.onitsway.MyEditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/drop_comments"
                                android:background="#00000000"
                                android:textColor="@color/grey_textcolor"
                                android:textSize="15sp"
                                android:minLines="5"
                                android:textColorHint="@color/grey_textcolor"
                                android:gravity="top" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <com.yellowsoft.onitsway.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DONE"
                android:id="@+id/done"
                android:background="@color/pink"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="10dp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/d_my_address_pop"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingTop="80dp"
            android:paddingRight="40dp"
            android:paddingBottom="80dp"
            android:background="#77b6b6b6"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/change_password_rounded_corners">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pink_rounded_corners_half"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView28"
                        android:src="@drawable/close"
                        android:visibility="invisible" />

                    <com.yellowsoft.onitsway.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="New Text"
                        android:id="@+id/d_sta_my_addre"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:id="@+id/close_d"
                        android:src="@drawable/close" />
                </LinearLayout>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_a_lv"
                    android:layout_margin="10dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:background="#55000000"
            android:id="@+id/d_save_pop"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/change_password_rounded_corners"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/change_password_rounded_corners">

                    <com.yellowsoft.onitsway.MyEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/d_address_title"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/black_text"
                        android:hint="Enter Address title"
                        android:background="#00000000"
                        android:layout_margin="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/d_save_ll"
                            android:background="@drawable/pink_rounded_corners">

                            <com.yellowsoft.onitsway.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save"
                                android:id="@+id/d_save_tv"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/d_dnt_save_ll"
                            android:background="@drawable/pink_rounded_corners">

                            <com.yellowsoft.onitsway.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dont Save"
                                android:id="@+id/d_dnt_save_tv"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="5dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>